<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CapstoneTravelApp"
             x:Class="CapstoneTravelApp.MainPage"
             NavigationPage.HasBackButton="False"
             BackgroundColor="Transparent"
             x:Name="Main">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <StackLayout>
                    <Label Text="Select User Below"/>
                </StackLayout>
                <ListView x:Name="UsersListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding FirstName}"  HorizontalOptions="StartAndExpand"/>
                                    <Label x:Name="{Binding LastName}" HorizontalOptions="CenterAndExpand"/>
                                    <Label x:Name="{Binding UserName}" HorizontalOptions="EndAndExpand"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneTravelApp.FlightsFolder.FlightNotesPage" BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image Source="HeaderLong01" WidthRequest="{OnPlatform Android=250}" HorizontalOptions="Center"/>
                <StackLayout>
                    <Frame HasShadow="True" Margin="10,0">
                        <StackLayout>
                            <Editor Placeholder="Add Flight Notes Here ex: Layover Information" x:Name="courseNotesEditor" MaxLength="10000" AutoSize="TextChanges"
                                HorizontalOptions="FillAndExpand" Margin="10,0"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
                <StackLayout>
                    <Button x:Name="menuButton" Text="Options" Clicked="MenuButton_Clicked" VerticalOptions="EndAndExpand" Margin="10,10,10,10" BackgroundColor="#FFF066"
                        FontSize="Medium" CornerRadius="10"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
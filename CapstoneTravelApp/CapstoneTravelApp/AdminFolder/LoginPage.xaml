<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneTravelApp.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="--Logo Place Holder--" HorizontalOptions="CenterAndExpand" Font="Bold, 20"/>
            <Frame HasShadow="True" Margin="10,0">
                <StackLayout>
                    <Entry x:Name="userNameEntry" HorizontalOptions="FillAndExpand" Text="allen1" Placeholder="Username" Margin="10,0"/>
                    <Entry x:Name="passwordEntry" IsPassword="True" HorizontalOptions="FillAndExpand" Text="allen1" Placeholder="Password" Margin="10,0"/>
                    <Picker x:Name="adminPicker" Title="Are You An Administrator?" HorizontalOptions="FillAndExpand" Margin="10,0">
                        <Picker.Items>
                            <x:String>No</x:String>
                            <x:String>Yes</x:String>
                        </Picker.Items>
                    </Picker>
                    <Button x:Name="loginButton" Text="Login" Clicked="LoginButton_Clicked" Margin="10,0" FontSize="Medium" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
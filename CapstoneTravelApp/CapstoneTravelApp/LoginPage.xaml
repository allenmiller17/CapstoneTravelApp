<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneTravelApp.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="adminPicker" Title="Are You An Administrator?" HorizontalOptions="CenterAndExpand">
                <Picker.Items>
                    <x:String>No</x:String>
                    <x:String>Yes</x:String>
                </Picker.Items>
            </Picker>
            <Entry x:Name="userNameEntry" HorizontalOptions="CenterAndExpand" Text="allen1" Placeholder="Username"/>
            <Entry x:Name="passwordEntry" IsPassword="True" HorizontalOptions="CenterAndExpand" Text="allen1" Placeholder="Password"/>
            <Button x:Name="loginButton" Text="Login" Clicked="LoginButton_Clicked" Margin="10,0" FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
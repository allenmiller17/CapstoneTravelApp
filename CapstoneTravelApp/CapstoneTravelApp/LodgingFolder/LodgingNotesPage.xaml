<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapstoneTravelApp.LodgingFolder.LodgingNotesPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Frame HasShadow="True" Margin="10,0">
                    <StackLayout>
                        <Editor Placeholder="Add Lodging Notes Here ex: Room Information" x:Name="courseNotesEditor" MaxLength="10000" AutoSize="TextChanges"
                                HorizontalOptions="FillAndExpand" Margin="10,0"/>
                    </StackLayout>
                </Frame>
            </StackLayout>
            <StackLayout>
                <Button x:Name="menuButton" Text="Options" Clicked="MenuButton_Clicked" VerticalOptions="EndAndExpand" Margin="10,10,10,10" 
                        FontSize="Medium" CornerRadius="10"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>